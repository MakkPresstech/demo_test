                            // alert('{{ request.page_type }}');

 

                           if(document.referrer.includes('{{ shop.url }}/collections/') ){

                                var collections = [];

                            {% for collection in product.collections %} collections.push("{{ collection.handle -}}");{% endfor %}

                             console.log(collections); 

    var str = document.referrer;

   

    str = str.replace('{{ shop.url }}/collections/', '');



   $.each(collections, function(index, value){

     if(value == str )

    $('#collection_crumb').html('<li><a href="{{ shop.url }}/collections/'+str+'" style="text-transform: capitalize;">'+str.replace('-', '  ')+'</a></li><span class="bread-arrow-nxt">›</span>');
    
 });
                              
                            }
                            
                          </script>