<div class="index-section video-bx{% if section.settings.alt %} index-section--alt{% endif %}">
   {%- if section.settings.subheading != blank or section.settings.title != blank -%}
      <header class="section-hedding SectionHeader SectionHeader--center ">
        {%- if section.settings.subheading != blank -%}
          <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
        {%- endif -%}

        {%- if section.settings.title != blank -%}
          <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
        {%- endif -%}
        
      </header>
    {%- endif -%}
    
    <div class="video-wrapper">
      <video autoplay muted loop playsinline>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
        <source src="{{ section.settings.video_url }}" type="video/ogg">
        Your browser does not support the video tag.
      </video>
    </div>
</div>

{% schema %}
{
  "name": ".featured-video",
  "class": "testimonial-bx-new",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video link"
    },
    {
      "type": "checkbox",
      "id": "alt",
      "label": "Use alternate section color"
    }
  ],
  "presets": [
    {
      "name": "featured-video"
    }
  ]
}
{% endschema %}
