<div class="instagram-section-layout page-width">
  <di clas="Container">
  	{%- if section.settings.subheading != blank or section.settings.title != blank -%}
      <header class="seaction-heading-design SectionHeader SectionHeader--center">
        {%- if section.settings.subheading != blank -%}
          <h3 class="subtitle h3">{{ section.settings.subheading | escape }}</h3>
        {%- endif -%}

        
        {% if section.settings.img-heading != blank %}
        <div class="heading-image">
          <img src="{{ section.settings.img-heading | img_url: '1920x' }}" class="image-heading desktop-img" />
          {% if section.settings.img-heading-mob != blank %}
              <img src="{{ section.settings.img-heading-mob | img_url: '800x' }}" class="image-heading mobile-img" />
          {% else %}
              <img src="{{ section.settings.img-heading | img_url: '800x' }}" class="image-heading desktop-img force-desk" />
          {% endif %}
        </div>
      {% else %}
        <h2 class="title h2">
          <!-- <i class="fa fa-instagram" style="font-size:30px"></i> -->
          {{ section.settings.title | escape }}</h2>
      {% endif %}
        
      </header>
    {%- endif -%}
  </di>
  
  <div class="instagram-section">
  	{%- for block in section.blocks -%}
    <div class="item">
      <a href="{{ block.settings.link }}">
      	<img loading='lazy' src="{{ block.settings.image.src | img_url: "large" }}" />
      </a>
      <div class="tittle">
        <p><a href="{{ block.settings.link }}"><i class="fa fa-instagram" aria-hidden="true"></i></a></p>
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% schema %}
  {
    "name": "Instagram Section",
    "settings": [
		{
          "type": "text",
          "id": "subheading",
          "label": "Sub-heading",
          "default": "Sub-heading"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Heading"
        }
	],
  "blocks": [
    {
      "type": "image",
      "name": "skincare",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Collection Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Instagram",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]		
 }
{% endschema %}

{% stylesheet %}
  .instagram-section-layout .seaction-heading-design .title {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 5px;
}
{% endstylesheet %}

