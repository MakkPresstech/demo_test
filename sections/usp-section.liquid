<div class="usp-section">
  <div class="container page-width">
  	{%- if section.settings.subheading != blank or section.settings.title != blank -%}
      <header class="seaction-heading-design SectionHeader SectionHeader--center">
        {%- if section.settings.subheading != blank -%}
          <h3 class="subtitle h3">{{ section.settings.subheading | escape }}</h3>
        {%- endif -%}

        {%- if section.settings.title != blank -%}
          <h2 class="title h2">{{ section.settings.title | escape }}</h2>
        {%- endif -%}
        
      </header>
    {%- endif -%}
    
    <div class="usp-icon-section  usp-slider usp-slider-slide">
      {%- for block in section.blocks -%}
      <div class="usp-box-design">
      	<img src="{{ block.settings.image.src | img_url: "107x" }}" / alt="{{ block.settings.image.alt | escape }}">
        <div class="content">
        	<p>{{ block.settings.icon-name }}</p>
        </div>
      </div>
      {% endfor %}
    </div>
    
  </div>
</div>

{% schema %}
  {
    "name": "Usp Icon",
    "settings": [
		{
          "type": "text",
          "id": "subheading",
          "label": "Sub-heading",
          "default": "Sub-heading"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Heading"
        }
	],
  "blocks": [
    {
      "type": "image",
      "name": "Usp Icon",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        
		{
          "type": "text",
          "id": "icon-name",
          "label": "Icon Name"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Uspp Icon",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]		
 }
{% endschema %}

