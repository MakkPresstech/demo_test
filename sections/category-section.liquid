<div class="festive-curation-section ">
  <div class="page-width">
  	{%- if section.settings.subheading != blank or section.settings.title != blank -%}
      <header class="seaction-heading-design SectionHeader SectionHeader--center ">
        {%- if section.settings.subheading != blank -%}
          <h3 class="subtitle h3">{{ section.settings.subheading | escape }}</h3>
        {%- endif -%}

        {% if section.settings.img-heading != blank %}
        <div class="heading-image">
          <img src="{{ section.settings.img-heading | img_url: '1920x' }}" class="image-heading desktop-img" />
          {% if section.settings.img-heading-mob != blank %}
              <img src="{{ section.settings.img-heading-mob | img_url: '800x' }}" class="image-heading mobile-img" />
          {% else %}
              <img src="{{ section.settings.img-heading | img_url: '800x' }}" class="image-heading desktop-img force-desk" />
          {% endif %}
        </div>
      {% else %}
        <h3 class="title h2">{{ section.settings.title }}</h3>
      {% endif %}
      </header>
    {%- endif -%}
    
    <div class="festive-curation">
	{%- for block in section.blocks -%}
    <div class="item">
      <div class="festive-design">
      	<a class="line-height-auto" href="{{ block.settings.link }}">
      	<img class="front-img" src="{{ block.settings.image.src | img_url: "large" }}" alt="{{ block.settings.image.alt | escape }}" />
        <img class="back-img" src="{{ block.settings.image2.src | img_url: "large" }}" alt="{{ block.settings.image2.alt | escape }}" />
      </a>
      <div class="content">
        <p class="heding"><a href="{{ block.settings.link }}">{{ block.settings.collection_tittle }}</a></p>
      </div>
      </div>
      
    </div>
    {% endfor %}
 
</div>
  </div>
</div>

{% schema %}
  {
    "name": "Festive-Curation",
    "settings": [
		{
          "type": "text",
          "id": "subheading",
          "label": "Sub-heading",
          "default": "Sub-heading"
        },
		{
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Heading"
        },
      {
        "type": "image_picker",
        "id": "img-heading",
        "label": "Heading Image"
      },
      {
        "type": "image_picker",
        "id": "img-heading-mob",
        "label": "Heading Image Mob"
      }
	],
  "blocks": [
    {
      "type": "image",
      "name": "category design",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image1"
        },
		{
          "id": "image2",
          "type": "image_picker",
          "label": "Image2"
        },
		{
          "type": "text",
          "id": "collection_tittle",
          "label": "Collection title"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Collection Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "festive-curation",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]		
 }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}

{% javascript %}

  

$(".festive-curation").slick({
        slidesToShow: 4,
        slidesToScroll: 1,
        arrows: true,
        dots: false,
		autoplay: true,
		autoplaySpeed: 3000,
		responsive: [
            {
              breakpoint: 991,
              settings: {  
                slidesToShow: 3,
                slidesToScroll: 1,
                arrows: false,
                dots: false,
                centerPadding: '100px',
                centerMode: true                
              }
            }, 
          {
              breakpoint: 769,
              settings: {  
                slidesToShow: 2, 
                slidesToScroll: 1,
                arrows: false,
                dots: false,
                centerPadding: '100px',
                centerMode: true                
              }
            },
          {
              breakpoint: 600,
              settings: {  
                slidesToShow: 1,
                slidesToScroll: 1,
                arrows: false,
                dots: false,
                centerPadding: '100px',
                centerMode: true                
              }
            }
          ]
});

{% endjavascript %}
