<div class="Categories-section">
  <div class="page-width">
    {%- if section.settings.subheading != blank or section.settings.title != blank -%}
      <header class="seaction-heading-design SectionHeader SectionHeader--center ">
        {%- if section.settings.subheading != blank -%}
          <h3 class="subtitle h3">{{ section.settings.subheading | escape }}</h3>
        {%- endif -%}

        {%- if section.settings.title != blank -%}
          <h2 class="title h2">{{ section.settings.title | escape }}</h2>
        {%- endif -%}
        
      </header>
    {%- endif -%}

    <div class="Categories-row">
      {%- for block in section.blocks -%}
        <div class="item">
          <div class="img">
            <a href="{{ block.settings.link }}"><img src="{{ block.settings.image.src | img_url: "large" }}" /></a>
          </div>
          <div class="content">
            <a href="{{ block.settings.link }}">{{ block.settings.category-title }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Category after banner",
    "settings": [
        {
          "type": "text",
          "id": "subheading",
          "label": "Sub-heading",
          "default": "Sub-heading"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Heading"
        }
    ],
    "max_blocks": 8,
  "blocks": [
    {
      "type": "image",
      "name": "Categories",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Collection Link"
        },
        {
          "type": "text",
          "id": "category-title",
          "label": "Category Title",
          "default": "Category"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Image",
      "name": "Category after banner",
      "blocks": [
        {
          "type": "image"
        }
      ]
    }
  ]        
 }
{% endschema %}


{% stylesheet %}
 


{% endstylesheet %}

{% javascript %}
$(document).ready(function() {
  if ($(window).width() < 991) {
    $('.Categories-row').slick({
      infinite: true,
      autoplay: true,
      autoplaySpeed: 3000,
      slidesToShow: 6, 
      slidesToScroll: 1, 
      arrows: false,
      dots: false,
      centerPadding: '50px',  
      centerMode: true,
       responsive: [
          { 
            breakpoint: 769,
            settings: {
              slidesToShow: 4,  
              slidesToScroll: 1,
               centerPadding: '100px'   
            }
          },
         { 
            breakpoint: 601, 
            settings: { 
              slidesToShow: 3,  
              slidesToScroll: 1, 
               centerPadding: '50px'    
            }
          }
        ]
    });
  }
}); 
{% endjavascript %}